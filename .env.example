# Freyja - AI-Powered Social Media Assistant - Environment Variables
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME="Freyja"
VERSION="1.0.0"
DEBUG=false

# Database Settings
DB_URL="sqlite:///./freyja.db"
DB_ECHO=false

# AI Service APIs
AI_OPENAI_API_KEY="your_openai_api_key_here"
AI_ANTHROPIC_API_KEY="your_anthropic_api_key_here"
AI_DEFAULT_MODEL="gpt-3.5-turbo"
AI_MAX_TOKENS=1000
AI_TEMPERATURE=0.7

# Scheduling Platform APIs (choose the one you prefer)
SCHEDULE_BUFFER_API_KEY="your_buffer_api_key_here"
SCHEDULE_HOOTSUITE_API_KEY="your_hootsuite_api_key_here"
SCHEDULE_LATER_API_KEY="your_later_api_key_here"

# Research APIs
RESEARCH_NEWS_API_KEY="your_news_api_key_here"
RESEARCH_GOOGLE_TRENDS_ENABLED=true
RESEARCH_MONITORING_INTERVAL=3600
RESEARCH_MAX_TRENDS_PER_CHECK=20

# Brand Settings
BRAND_NAME="Your Brand Name"
BRAND_VOICE_TONE="professional"
BRAND_VOICE_STYLE="informative"
BRAND_PERSONALITY="helpful"
BRAND_MAX_HASHTAGS=3
BRAND_PREFERRED_TOPICS="tech,ai,productivity"
BRAND_AVOID_TOPICS="politics,controversial"
BRAND_POSTING_FREQUENCY="3-5 posts per day"
BRAND_OPTIMAL_TIMES="9:00,13:00,17:00"
BRAND_TIMEZONE="UTC"

# Growth Goals
GROWTH_FOLLOWER_TARGET=10000
GROWTH_MONTHLY_GROWTH_RATE=15.0
GROWTH_ENGAGEMENT_RATE_TARGET=5.0
GROWTH_TIMELINE="6 months"
GROWTH_COACHING_FREQUENCY="weekly"
GROWTH_FOCUS_AREAS="audience_growth,engagement,content_strategy"
GROWTH_LEARNING_STYLE="data-driven"
GROWTH_COMPETITORS="@competitor1,@competitor2,@competitor3"
GROWTH_BENCHMARK_METRICS="followers,engagement_rate,posting_frequency"

# Security
SECURITY_SECRET_KEY="your-super-secret-key-change-this-in-production"
SECURITY_JWT_SECRET="your-jwt-secret-change-this-in-production"
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=30